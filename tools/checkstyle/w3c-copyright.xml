<module name="Checker">
  <property name="fileExtensions" value="java, c, h, cpp" />
  <module name="RegexpHeader">
    <property name="severity" value="error" />
    <property name="headerFile" value="tools/checkstyle/w3c-copyright.pattern" />
    <property name="multiLines" value="1,3"/>
  </module>
  <!-- Files with Google copyrights amongst the sources with W3C copyrights. -->
  <module name="BeforeExecutionExclusionFileFilter">
    <property name="fileNamePattern"
      value="dom/src/test/java/tests/api/org/w3c/dom/AllTests_Level[12].java" />
  </module>
  <module name="BeforeExecutionExclusionFileFilter">
    <property name="fileNamePattern"
      value="dom/src/test/java/org/w3c/domts/JunitTestCases.java" />
  </module>
</module>
